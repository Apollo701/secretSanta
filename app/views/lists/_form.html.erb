<%= simple_form_for @list do |f| %>
  <%= f.input :price_limit %>
  <h3>Users</h3>
  <div id='users'>
    <%= f.simple_fields_for :users do |user| %>
      <%= render 'user_fields', :f => user %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association 'add user', f, :users %>
    </div>
  </div>
    <%= f.submit 'Save' %>
<% end %>